<div id = "title" > Arsenal Football Club </div>

<script>
    function changetitlecolor(){
        var newcolor = "#000000".replace(/0/g,function(){return (~~(Math.random()*16)).toString(16);});
        var title = $('#title');
        title.css({ color: newcolor})
        console.log("CHANGED COLOR TO: " + newcolor)
    };
    
    setInterval(changetitlecolor, 5000)
    
    
</script>

