<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
   
</head>
<body>

 <% if alert %>
    <p class="alert bg-warning"><%= alert %></p>
  <% end %>
  <%= yield %>
  
<% if current_page?(root_url)%>
    <% if user_signed_in? %>
      Logged in as <strong><%= current_user.email %></strong>
      <br>
    <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-btn btn btn-warning navbar-link' %> |
    <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-btn btn btn-warning navbar-link'%>
    
  <% else %>
    <%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-warning btn-default navbar-btn navbar-link'  %> |
    <%= link_to "Login", new_user_session_path, :class => 'btn btn-primary btn-default navbar-btn navbar-link'  %>
        <% end %>
        
<% else %>

  <nav class = "nav navbar-inverse">
  <% if user_signed_in? %>
    Logged in as <strong><%= current_user.email %></strong>
    <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-btn btn btn-warning navbar-link' %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-btn btn btn-warning navbar-link'  %>
    <%= link_to 'Back to Home page', root_path, :class => 'navbar-btn btn btn-warning navbar-link'  %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path, :class => 'btn btn-warning btn-default navbar-btn navbar-link'  %>
    <%= link_to "Login", new_user_session_path, :class => 'btn btn-primary btn-default navbar-btn navbar-link'  %>
   <%= link_to 'Back to Home page', root_path, :class => 'navbar-btn btn btn-warning navbar-link'  %>
  <% end %>
  <% end %>

  </nav>
 

  
</body>
</html>
